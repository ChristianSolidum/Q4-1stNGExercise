<body>
    <!-- Navigation (Stays on Top) -->
    <div class="w3-top w3-bar w3-black">
        <a href="/" class="w3-bar-item w3-button">Input</a>
        <a href="/" class="w3-bar-item w3-button">Draw</a>
    </div>

    <!-- Start Content -->
    <div id="home" class="w3-container w3-content w3-padding-64">
        <h2>Right Triangle with Legs of Length {{sideLength1}} and {{sideLength2}}</h2>
        <canvas class=" w3-white" id="mycanvas" width="100" height="100"> 
          <!-- do not remove, this defines the drawing area/canvas with size of 100 by 100 -->
        </canvas>
    </div>
    <footer class="w3-padding-large"> &copy; 2025 SOLIDUM</footer>

    <script>
        function drawTriangle() {
            const sideLength1 = Number({{sideLength1}});
            const sideLength2 = Number({{sideLength2}});

                let canvas = document.getElementById("mycanvas");
                canvas.width = Math.max(sideLength1 + 50);
                canvas.height = Math.max(sideLength2 + 50);

                const ctx = canvas.getContext("2d");
                const o = 20;

                ctx.beginPath();
                ctx.moveTo(o, o);                           // Start at top left
                ctx.lineTo(o, o + sideLength2);             // Draw vertical side
                ctx.lineTo(o + sideLength1, o + sideLength2); // Draw horizontal side
                ctx.closePath();
                ctx.stroke();
        }
        drawTriangle();
    </script>


</body>

